<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTP traffic for localhost and Android emulator (port 8080) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Allow HTTP for local network IPs (for physical device testing on port 8080) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.148.199.69</domain>
        <domain includeSubdomains="true">10.148.199</domain>
    </domain-config>
    
    <!-- Allow HTTP for all local network (for development only) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

